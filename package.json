{
    "name": "todoapp",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^8",
        "express": "^4",
        "@cap-js/hana": "^1",
        "@sap/xssec": "^4"
    },
    "devDependencies": {
        "@cap-js/cds-types": "^0.8.0",
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^8"
    },
    "scripts": {
        "start": "cds-serve"
    },
    "cds": {
        "requires": {
            "[production]": {
                "db": {
                    "kind": "hana"
                },
                "auth": "xsuaa"
            },
            "[development]": {
                "db": {
                    "kind": "sqlite",
                    "credentials": {
                        "url": "db.sqlite"
                    }
                },
                "auth": {
                    "kind": "basic",
                    "users": {
                        "nastia": {
                            "roles": [
                                "Admin"
                            ]
                        }
                    }
                }
            },
            "[hybrid]": {
                "auth": "xsuaa",
                "db": {
                    "kind": "sqlite",
                    "credentials": {
                        "url": "db.sqlite"
                    }
                }
            }
        },
        "sql": {
            "native_hana_associations": false
        },
        "fiori": {
            "preview": true
        },
        "server": {
            "index": true
        }
    }
}
